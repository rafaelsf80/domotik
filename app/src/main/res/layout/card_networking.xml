<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:onClick="show"
    android:layout_margin="10dp"
    android:id="@+id/cv_networking"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="30dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@color/colorPrimaryLight">

    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:columnCount="3">

        <TextView
            android:id="@+id/tv_networking"
            android:gravity="left"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@color/secondary_text"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            app:layout_columnWeight="1"
            app:layout_columnSpan="2"
            android:text="Tablet" />

        <ImageView
            android:id="@+id/im_card_networking_menu"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:scaleType="fitEnd"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_more_vert_24dp"
            android:adjustViewBounds="false"
            android:cropToPadding="false"
            android:layout_width="104dp" />

        <ImageView
            android:id="@+id/im_device"
            android:layout_marginTop="10dp"
            android:layout_height="64dp"
            android:layout_width="64dp"

            app:layout_columnWeight="1"
            android:src="@drawable/common_google_signin_btn_icon_dark_normal" />

        <TextView
            android:id="@+id/tv_device_name"
            android:padding="@dimen/activity_vertical_margin"
            android:text="Device name"
            android:textColor="@color/primary_text" />

        <TextView
            android:id="@+id/tv_ip_address"
            android:padding="@dimen/activity_vertical_margin"
            android:text="IP Address"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/secondary_text" />
    </android.support.v7.widget.GridLayout>

</android.support.v7.widget.CardView>